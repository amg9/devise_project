<%= button_to "Log Out", destroy_user_session_path, method: :delete %>
<h2>Welcome <%= current_user.first_name %></h2>
<hr />
<h3>Your Pets</h3>
<ul>
  <% @pets.each do |pet| %>
    <li>
      <b><%= link_to pet.name, pet_path(pet) %></b> the <%= pet.age %> year old <%= pet.species %>
    </li>
  <% end %>
</ul>
<%= link_to "Add Pet", new_pet_path %>